<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ff00">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ff00"
        android:columnCount="2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:rowCount="6"
        tools:context="com.udinic.perfdemo.HeavyAnimationActivity">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Start"/>

        <LinearLayout
            android:orientation="vertical"
            >
            <CheckBox
                android:id="@+id/chkUseHwLayer"
                android:text="Use HW Layer"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/chkUseAlpha"
                android:text="Alpha overlay"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#cb407c"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#8f9950"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#32d691"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#5a6db2"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#752329"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#991499"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#cb407c"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#78e29a"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#f6aee1"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#746ee8"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#ae9ce0"
            android:text="View"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#e9c76f"
            android:text="View"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/alphaLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="#ff9923"
        android:orientation="vertical"/>

    <include
        android:id="@+id/udinic"
        layout="@layout/view_animated"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>